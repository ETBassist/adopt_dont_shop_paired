<% content_for :title, "All Shelters" %>


<%= link_to 'New Shelter', "/shelters/new", class: "Create" %>


<section class="best-shelters">
  <h2>Best Shelters</h2>
  <% @best_shelters.each do |shelter| %>
    <hr>
      <h3>
        <%= link_to shelter.name, "/shelters/#{shelter.id}"%>
      </h3>
      <%= link_to "Update Shelter", "/shelters/#{shelter.id}/edit", class: "Update" %> |

      <% if shelter.has_approvals? %>
        Delete Shelter
      <% else %>
        <%= link_to 'Delete Shelter', "/shelters/#{shelter.id}", method: :delete, class: "Delete" %>
      <% end %>
  <% end %>
</section>
<br />
<br />
<section class="all-shelters">
  <h2>All Shelters</h2>
  <%= link_to 'Sort By: Number of Adoptable Pets', "/shelters/?sort=adoptable"%> |
  <%= link_to 'Sort By: Alphabetical', "/shelters/?sort=alphabetical"%> |

  <% @shelters.each do |shelter| %>
    <hr>
    <div id="shelter-<%= shelter.id %>">
      <h3>
        <%= link_to shelter.name, "/shelters/#{shelter.id}"%>
      </h3>
      <%= link_to "Update Shelter", "/shelters/#{shelter.id}/edit", class: "Update" %> |

      <% if shelter.has_approvals? %>
        Delete Shelter
      <% else %>
        <%= link_to 'Delete Shelter', "/shelters/#{shelter.id}", method: :delete, class: "Delete" %>
      <% end %>
    </div>
  <% end %>
</section>
