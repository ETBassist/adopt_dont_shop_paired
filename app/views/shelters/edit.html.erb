<% content_for :title, "Edit Info for #{@shelter.name}" %>

<h1>Edit Shelter</h1>

<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{@shelter.name}" %>
  </div>

  <div class="field">
    <%= label_tag :address %>
    <%= text_field_tag :address, "#{@shelter.address}" %>
  </div>

  <div class="field">
    <%= label_tag :city %>
    <%= text_field_tag :city, "#{@shelter.city}" %>
  </div>

  <div class="field">
    <%= label_tag :state %>
    <%= text_field_tag :state, "#{@shelter.state}" %>
  </div>

  <div class="field">
    <%= label_tag :zip %>
    <%= text_field_tag :zip, "#{@shelter.zip}" %>
  </div>

  <div class="actions">
    <%= submit_tag 'Update Shelter' %>
  </div>
<% end %>
