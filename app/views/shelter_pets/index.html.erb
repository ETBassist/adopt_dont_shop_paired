<h1>Shelter Pets at <%= @shelter.name %></h1>

<%= link_to 'Adoptable Pets', "/shelters/#{@shelter.id}/pets?adoptable=true" %> |
<%= link_to 'Pets Pending Adoption', "/shelters/#{@shelter.id}/pets?adoptable=false" %>

<p>
  <strong>
    Total pets: <%= @pets.count %>
  </strong>
</p>

<%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new", class: "Create" %>

  <% @pets.each do |pet| %>
    <hr>
    <div class="pet">
      <%= image_tag pet.image %>

      <p>
        <strong>Name:</strong>
        <%= link_to pet.name, "/pets/#{pet.id}" %>
      </p>

      <p>
        <strong>Age:</strong>
        <%= pet.age %>
      </p>

      <p>
        <strong>Sex:</strong>
        <%= pet.sex %>
      </p>
    </div>
  <% end %>

<section class="adopted-pets">
  <h3>Adopted Pets</h3>
  <% @adopted_pets.each do |pet| %>
    <div class="pet">
      <%= image_tag pet.image %>

      <p>
        <strong>Name:</strong>
        <%= link_to pet.name, "/pets/#{pet.id}" %>
      </p>

      <p>
        <strong>Age:</strong>
        <%= pet.age %>
      </p>

      <p>
        <strong>Sex:</strong>
        <%= pet.sex %>
      </p>
    </div>
  <% end  %>

</section>
