<% content_for :title, "Add New Pet to #{@shelter.name}" %>

<h1>New Pet</h1>

<%= form_tag "/shelters/#{@shelter.id}/pets" do %>
  <div class="field">
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>

  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div class="field">
    <%= label_tag :description %>
    <%= text_area_tag :description %>
  </div>

  <div class="field">
    <%= label_tag :age %>
    <%= text_field_tag :age %>
  </div>

  <div class="field">
    <%= radio_button_tag(:sex, 'Male') %>
      <%= label_tag(:sex_Male, 'Male') %>
    <%= radio_button_tag(:sex, 'Female') %>
      <%= label_tag(:sex_Female, 'Female') %>
  </div>

  <div class="actions">
    <%= submit_tag 'Create Pet'%>
  </div>
<% end %>
