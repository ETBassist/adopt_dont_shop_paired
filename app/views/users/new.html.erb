<% content_for :title, "Create New User" %>
<h1>New User</h1>

<%= form_tag '/users' do %>
  <div class="actions">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div class="actions">
    <%= label_tag :street_address %>
    <%= text_field_tag :street_address %>
  </div>

  <div class="actions">
    <%= label_tag :city %>
    <%= text_field_tag :city %>
  </div>

  <div class="actions">
    <%= label_tag :state %>
    <%= text_field_tag :state %>
  </div>

  <div class="actions">
    <%= label_tag :zip %>
    <%= text_field_tag :zip %>
  </div>

  <div class="actions">
    <%= submit_tag 'Create User' %>
  </div>
<% end %>
