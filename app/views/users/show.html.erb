<% content_for :title, "#{@user.name} Reviews and Info" %>
<h2>
  <%= @user.name %>
</h2>

<p><strong>Address:</strong><br />
  <%= @user.street_address %>,<br />
  <%= @user.city %>, <%= @user.state %> <%= @user.zip %>
</p>

<% if @user.reviews.average(:rating).nil? %>
<% else %>
  <p>
    <strong>Average Review Score: </strong>
    <%= @user.reviews.average(:rating) %>
  </p>
<% end %>

<% if @best_review %>
  <section class="best">
    <%= @best_review.title %>
    <%= @best_review.rating %>
    <%= @best_review.content %>
    <%= image_tag @best_review.image if @best_review.image %>"
  </section>

  <section class="worst">
    <%= @worst_review.title %>
    <%= @worst_review.rating %>
    <%= @worst_review.content %>
    <%= image_tag @worst_review.image if @worst_review.image %>
  </section>
<% else %>
  <p>No Reviews to Show</p>
<% end %>

<p>
  <% @user.reviews.each do |review| %>
    <%= review.rating %>
    <%= review.title %>
    <%= review.content %>
  <% end %>
</p>
<h3>Ready to get started? Here are some options:</h3>
<p><%= link_to "View Pets", "/pets" %></p>
<p><%= link_to "Find a Shelter", "/shelters" %></p>
<p><%= link_to "Start an Application", "/applications/new" %></p>
