<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<% @pets.each do |pet| %>
  <hr>
  <%= image_tag "#{pet.image}" %>
  <%= pet.name %>
  <%= pet.age %>
  <%= pet.sex %>
  <%= pet.adoptable %>
  <%= pet.shelter.name %>

  <%= link_to 'Show', pet %>
  <%= link_to 'Edit', edit_pet_path(pet) %>
  <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


<br>

<%= link_to 'New Pet', new_pet_path %>
